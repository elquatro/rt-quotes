#!/usr/bin/env python
# coding: utf-8

import yaml
import json
import shutil
import os
import fileinput

JSON_FOLDER = 'json'
YAML_FILE = 'quotes.yaml'

print "Cleaning up..."

shutil.rmtree(JSON_FOLDER)
os.mkdir(JSON_FOLDER)

print "Loading..."

with open(YAML_FILE) as f:
    data = yaml.safe_load(f)

print "Generating JSON..."

for i, q in enumerate(data):
    filename = "%s/%s.json" % (JSON_FOLDER, str(i).zfill(5))
    with open(filename, 'w') as f:
        json.dump(q, f)

print "Generating app.js..."

for linenum, line in enumerate(fileinput.FileInput("app.js", inplace=1)):
    if linenum == 0:
        print "var LENGTH = %d;" % len(data)
    else:
        print line.rstrip()

print "------------------"
print "TOTAL QUOTES: %d" % len(data)
print "Done."
